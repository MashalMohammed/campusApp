<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <!--TODO Thanveer : Design the list_item CardView for forums-->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="7dp"
        app:cardElevation="7dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!--            <FrameLayout-->
            <!--                android:id="@+id/forum_bar_list_item"-->
            <!--                android:layout_width="match_parent"-->
            <!--                android:layout_height="3dp"-->
            <!--                android:background="@color/color1"/>-->

            <!--        placeholder for image       -->
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/forum_bar_list_item"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@color/colorSecondaryVariant"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_launcher_foreground"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="7dp">
                <TextView
                    android:id="@+id/forum_title_list_item"
                    android:textSize="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="7dp"
                    android:textAppearance="?attr/textAppearanceListItem" />
                <TextView
                    android:id="@+id/forum_description_list_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="7dp"
                    android:textAppearance="?attr/textAppearanceListItem" />
                <androidx.coordinatorlayout.widget.CoordinatorLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_gravity="left|center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:src="@drawable/ic_upvote"
                            android:layout_width="21dp"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="58"
                            android:textSize="13dp"/>
                        <ImageView
                            android:layout_marginLeft="10dp"
                            android:src="@drawable/ic_downvote"
                            android:layout_width="21dp"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:textSize="13dp"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="3"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_gravity="right|center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_marginLeft="10dp"
                            android:src="@drawable/ic_active_people"
                            android:layout_width="17dp"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:layout_marginLeft="7dp"
                            android:textSize="13dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="12" />
                    </LinearLayout>
                </androidx.coordinatorlayout.widget.CoordinatorLayout>
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</LinearLayout>
